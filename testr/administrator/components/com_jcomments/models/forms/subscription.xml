<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_jcomments/models/fields">
		<field 
			name="object_id" 
			type="text" 
			class="inputbox validate-numeric"
			size="40" 
			label="A_SUBSCRIPTION_OBJECT_ID"
			description="" 
			required="true" />

		<field 
			name="object_group" 
			type="jcommentsobjectgroup"
			class="inputbox"
			label="A_COMPONENT"
			description=""
			required="true" />

		<field 
			name="name" 
			type="text" 
			class="inputbox"
			size="40"
			label="A_SUBSCRIPTION_NAME"
			description=""
			required="true" />

		<field 
			name="email" 
			type="email" 
			class="inputbox"
			size="40" 
			label="A_SUBSCRIPTION_EMAIL"
			description="" 
			validate="email"
			required="true" />

		<field 
			name="published" 
			type="list"
			label="JSTATUS" 
			description=""
			class="inputbox" 
			size="1" 
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field 
			name="id" 
			type="text" 
			default="0"
			readonly="true" 
			class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 
			description="JGLOBAL_FIELD_ID_DESC" />

		<field 
			name="checked_out" 
			type="hidden" 
			filter="unset" />

		<field 
			name="checked_out_time" 
			type="hidden" 
			filter="unset" />
	</fieldset>
</form>
