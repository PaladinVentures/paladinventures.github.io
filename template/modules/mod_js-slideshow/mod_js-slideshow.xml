<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0.0" method="upgrade">
  <version>3.0.0</version>
  <name>Js-Slideshow</name>
  <createdOn>September 2014</createdOn>
  <author>Joomlastars</author>
  <authorEmail>stars.joomla@gmail.com</authorEmail>
  <copyright>copyright (C) 2014 by Joomlastars - All rights reserved!</copyright>
  <license>License Info</license>
  <description>Js-Slideshow: A slideshow which uses the 4 Different slideshows.</description>
  <files>
    <filename module="mod_js-slideshow">mod_js-slideshow.php</filename>
    <filename>index.html</filename>
    <filename>mod_js-slideshow.xml</filename>
    <folder>tmpl</folder>
  </files>
  <config>
    <fields name="params">
      <fieldset name="ImageOptions" label="Image Options">
        
        <!--SlideShow 1-->
        <field type="spacer" name="Slide-1" label="Slide1" />
        <field type="spacer" name="@spacer00" hr="true" />
        <field name="slide1_img" type="media" size="30" default="header-back.jpg" label="Background Image" description="Name of the image | Change the name of Image as per your wish." />
        <field name="slide1_title1" type="text" size="70" default="STORYTELLING ORBITAL TECHNOLOGY" label="Title 1" description="Enter the title for Image 1" filter="raw" />
        <field name="slide1_desc1" type="textarea" size="50" default="" label="Description" description="Enter the description for Image 1" filter="raw" />
        <field name="slide1_btn1" type="text" size="70" default="CHECK OUR WORKS!"  label="Button 1" description="Enter the Button Name 1" filter="raw" />
        <field name="slide1_link1" type="text" size="70" default="#portfolio-wrapper"  label="Link 1" description="Enter the Link for Button 1" filter="raw" />
        <field type="spacer" name="@spacer01" hr="true"/>
        
        <!--SlideShow 2-->
        <field type="spacer" name="Slide-2" label="Slide2" />
        <field type="spacer" name="@spacer02" hr="true" />
        <field name="slide2_img" type="media" size="30" default="header-back2.jpg" label="Image Name" 
												description="Name of the image | Change name of the Image as per your wish." />
        <field name="slide2_title1" type="text" size="70" default="MEET OUR CREATIVE TEAM" label="Title 1" description="Enter the title for Slide 2" filter="raw" />
        <field name="slide2_desc2" type="textarea" size="50" default="" label="Description" description="Enter the description for Slide 2" filter="raw" />
        <field name="slide2_btn1" type="text" size="70" default="MEET OUR TEAM!"  label="Button 1" description="Enter the Button Name 1" filter="raw" />
        <field name="slide2_link1" type="text" size="70" default="#team-wrapper"  label="Link 1" description="Enter the Link for Botton 1" filter="raw" />
        <field type="spacer" name="@spacer03" hr="true"/>
        
        <!--SlideShow 3-->
        <field type="spacer" name="Slide-3" label="Slide3" />
        <field type="spacer" name="@spacer04" hr="true" />
        <field name="slide3_img" type="media" size="30" default="header-back3.jpg" label="Image Name" 
												description="Name of the image | Change name of the Image as per your wish." />
        <field name="slide3_title1" type="text" size="70" default="WE GENERATE CREATIVE IDEAS" label="Title 1" description="Enter the title for Slide 3" filter="raw" />
        <field name="slide3_desc3" type="textarea" size="50" default="" label="Description" description="Enter the description for Slide 3" filter="raw" />
        <field name="slide3_btn1" type="text" size="70" default="CONTACT US!"  label="Button 1" description="Enter the Button Name 1" filter="raw" />
        <field name="slide3_link1" type="text" size="70" default="#contact-wrapper"  label="Link 1" description="Enter the Link for Botton 1" filter="raw" />
        <field type="spacer" name="@spacer05" hr="true"/>
      </fieldset>
    </fields>
  </config>
</extension>
